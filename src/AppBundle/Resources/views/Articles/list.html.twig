{% import 'AppBundle:macro:strings.html.twig' as strings %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}BinaSmartShopOnline{% endblock %}</title>
    <!-- Bootstrap -->
    {%  block stylesheets %}
     <link href="{{ asset('css/bootstrap.min.css')}}" rel="stylesheet">
     <link href="{{ asset('css/style.css')}}" rel="stylesheet">
     <link href="{{ asset('css/nanoscroller.css')}}" rel="stylesheet">
     <link href="{{ asset('css/mainstyle.css')}}" rel="stylesheet">
    {% endblock stylesheets %}    

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.sticky.js') }}"></script>
    <script src="{{ asset('js/jquery.nanoscroller.min.js') }}"></script>
    <script src="{{ asset('js/js/search.js') }}"></script>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
    {% block externaljs %}{% endblock %}
    <script>
        {% block headjs %}{% endblock %}
    </script>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
   <div class="container">
    <nav class="navbar navbar-default  hidden-lg">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed pull-left" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="{{ path('home') }}" class="">
                    <img src="{{ asset('images/logo.png')}}" alt="logo" class="header-logo" />
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                     {% for Menu in data.menu %}    
                      <li class="limenu"><a href="{{path('home',{subjectId:Menu.denMenu}) }}">{{Menu.denMenu}}</a></li>
                    {% endfor %}
                  <li>{% include 'AppBundle:partials:search.form.html.twig' %}</li>
                    
             
       
                </ul>
                
                
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
                      
    </div>                 
    <header class="header hidden-xs hidden-md hidden-sm">
        <div class="container">
             <a href="{{ path('home') }}" class="">
                <img src="{{ asset('images/logo.png')}}" alt="logo" class="header-logo" />
             </a>    
        <div class="meniu">
          <ul>
              <li> {% include 'AppBundle:partials:search.form.html.twig' %}</li>
          {% for Menu in data.menu %}    
            <li><a href="{{path('home',{subjectId:Menu.denMenu}) }}">{{Menu.denMenu}}</a></li>
          {% endfor %}
          </ul>
          
      </div>
        </div>
    </header>
    <div class="container main">
        <div class="col-md-3 left-col hidden-xs hidden-sm">
            <aside class="left-block">
                <div class="square-block">
                    <div class="inner">
                       
                        <h4>Categories</h4>
                        <ul class="list-unstyled leftmenu">
                            <li><a href="{{ path('home') }}">All</a></li>
                        
          {% for Menu in data.menu %}    
            <li><a href="{{path('home',{subjectId:Menu.denMenu}) }}">{{Menu.denMenu}}</a></li>
          {% endfor %}
          </ul>
                    </div>
                </div>
                <div class="square-block" id="most-popular">
                  <div class="square-block" id="most-popular">
                     <div class="inner">
                      <h5 class="middle-header blue-text">Most Popular</h5>
                  <ul class="list-unstyled">
                            {% if data.popular is defined %}
                            {% for popular in data.popular %}
                               <li>
                                 <div class="pull-right img-placeholder">
                                <a href="{{path('info',{i:popular.id}) }}">   
                                      {%if popular.image is  empty %}
               <img src="{{ asset('images/logo-placeholder.jpg')}}" alt="post" /> 
               {% else %}
       <img src="{{ asset('images/')}}{{popular.image}}" class="img-responsive" alt="popular"> 
              {%endif%}
                                 
                                </a>
                                </div>
                                <a href="{{path('info1',{i:popular.id}) }}">{{popular.title}}</a>
                              </li>
                            {% endfor %} 
                            {%endif%}
                          </ul>
                    </div>
                </div>
                </div>
            </aside>
        </div>
 <div class="col-md-9 content">
         {% for infocom in data.info %}
  <div class="singe-page company-profile square-block col-xs-12">
    <div class="inner">
        <div class="pull-left left-col">
            <div class="image-placeholder">
                                   {%if infocom.image is  empty %}
               <img src="{{ asset('images/logo-placeholder.jpg')}}" alt="post" /> 
               {% else %}
      <img src="{{ asset('images/')}}{{infocom.image}}" alt="{{infocom.title}}" class="profile-logo">
              {%endif%}
                
            </div>
            <div class="profile-buttons">
               
                <a href="{{path('infoarticle',{i:infocom.id}) }}" class="btn btn-default green text-uppercase">View articles</a>
            </div>
        </div>
        <div class="content">
            <ul class="list-unstyled">
                <li class="company-name"><h1>{{ infocom.title }}</h1></li>
                                                                <li>
                    <p>Description:</p>
                    <p> {{infocom.description}}</p>
                    <div>
                        
                    </div>
                    <br>
                </li>
            </ul>
        </div>
    </div>
</div>
    {% endfor %}
 </div>

